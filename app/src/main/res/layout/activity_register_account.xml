<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký Sách mềm"
        android:textColor="#4052b5"
        android:textSize="26sp"
        android:textStyle="italic|bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:text="Họ:"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_ho_in_register"
                style="@style/TextValue"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edt_login"
                android:hint="Họ"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:text="Tên:"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_ten_in_register"
                style="@style/TextValue"
                android:layout_width="175dp"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edt_login"
                android:hint="Tên"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="21sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Địa chỉ email:"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_email_in_register"
            style="@style/TextValue"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edt_login"
            android:hint="Địa chỉ email ..."
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textColor="@android:color/black"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Xác nhận địa chỉ email:"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_xac_nhan_email_in_register"
            style="@style/TextValue"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edt_login"
            android:hint="Xác nhận dịa chỉ email ..."
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textColor="@android:color/black"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Mật khẩu:"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edt_login"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_password_in_register"
                style="@style/TextValue"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="Mật khẩu ..."
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/img_hide_password_in_register"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_hide_password" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/TextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Xác nhận mật khẩu:"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edt_login"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_xac_nhan_password_in_register"
                style="@style/TextValue"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="Xác nhận mật khẩu ..."
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/img_hide_xac_nhan_password_in_register"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_hide_password" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_edt_login">

        <TextView
            android:id="@+id/btn_register_in_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c9c9c9"
            android:gravity="center"
            android:text="Đăng ký"
            android:textColor="#004dba"
            android:textSize="26sp" />
    </LinearLayout>

</LinearLayout>